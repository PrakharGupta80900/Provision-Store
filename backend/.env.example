# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/provision-store?retryWrites=true&w=majority

# JWT secret — use a long random string in production
JWT_SECRET=your_super_secret_jwt_key_here

# Server port (Render sets this automatically; leave as 5000 for local)
PORT=5000

# Your Vercel frontend URL (e.g. https://provision-store.vercel.app)
FRONTEND_URL=https://your-app.vercel.app

# Optional — Gmail credentials for OTP emails
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=your_gmail_app_password
